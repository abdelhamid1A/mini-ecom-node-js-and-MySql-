

<table class="table table-dark table-striped">
   <thead>
    <tr>
      <th scope="col">name</th>
      <th scope="col">price</th>
      <th scope="col">category</th>
      <th scope="col">action</th>
    </tr>
  </thead>
   <tbody>
       {{#each product}}
       {{this.id_product}}
        <tr>
            <th scope="row">{{this.productName}}</th>
            <td>{{this.price}}</td>
            <td>{{this.name}}</td>
            <td>
                <a href="update/{{this.id_product}}" class="btn btn-warning">update</a>
                <a href="delete/{{this.id_product}}" class="btn btn-danger">delete</a>
            </td>
        </tr>
            
       {{/each}}
    </tbody>
</table>